<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/info"
            android:name= "vn.edu.usth.newsreader.Nghiafrag1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <fragment
            android:layout_marginTop="60dp"
            android:id="@+id/setting"
            android:name="vn.edu.usth.newsreader.Nghiafrag2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <fragment
            android:layout_marginTop="110dp"
            android:id="@+id/late"
            android:name="vn.edu.usth.newsreader.Nghiafrag3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:layout_marginTop="160dp"
            android:id="@+id/ext"
            android:name="vn.edu.usth.newsreader.Nghiafrag4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </androidx.fragment.app.FragmentContainerView>



</LinearLayout>