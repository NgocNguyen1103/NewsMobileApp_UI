<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vid1_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qngoc_place.vid1_detailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_video">
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/video_view" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10.5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/text"
            tools:ignore="InvalidId">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="Title of video"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/intro"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Eight hours after two large old trees, a flamboyant and an African mahogany, crashed down on his car outside his house, Le Tu, 55, was still in shock.
At 5:30 p.m. on Saturday the taxi driver had returned to his house on Quan Su Street in Hoan Kiem District after dropping off his last customer. He parked his car near the door and close to the two trees, believing that with their size and strong roots, they would withstand the mighty storm."
                />

            <TextView
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:id="@+id/upload_time"
                android:textColor="#AAA9A9"
                android:text="Technology | Sunday, 8/8/2024, 12:10 (GMT +7) | " />

            <TextView
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Nguyen"
                android:paddingLeft="260dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:background="#d3d3d3"
                />

            <TextView
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <EditText
                android:fontFamily="sans-serif-condensed-light"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/Comment_Bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Send your comment"
                android:inputType="text"
                android:background="@drawable/rounded_bar"
                android:paddingLeft="19dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
